{
    "version": 2,
    "builds": [
        {
            "src": "server/dist/index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["dist/**"] }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
              "distDir": "dist"
            }
          }
    ],
    "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/server/index.js"
    }
  ]
}